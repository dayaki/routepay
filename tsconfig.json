{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types"],
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"],
      "@images": ["./assets/images/*"],
      "@icons": ["./assets/icons.tsx"],
      "@common": ["./src/common"],
      "@store": ["./src/store"],
      "@utils": ["./src/utils"],
      "@screens/*": ["./src/screens/*"],
      "@types": ["./src/types"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
